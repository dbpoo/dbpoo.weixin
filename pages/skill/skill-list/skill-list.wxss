@import "../../template/avatar-template.wxss";

.game {
  width: 100%;
  background-color: #fff;
  position: fixed;
  top: 0;
  left: 0;
}

.game-nav {
  height: 45px;
  line-height: 43px;
  white-space: nowrap;
}

.game-nav .on {
  font-weight: 700;
  color: #0084e0;
  border-bottom: 2px solid #0084e0;
}

.game-nav text {
  padding: 0 10px;
  display: inline-block;
}

.avatar-tit {
  margin-bottom: 30rpx;
}

.avatar-tit image {
  width: 100%;
  position: absolute;
  top: 0;
  left: 0;
}

.avatar-tit .name {
  width: 100%;
  position: absolute;
  font-size: 40rpx;
  font-weight: bold;
  top: 20rpx;
  left: 20px;
}

.avatar-tit .info {
  background: -webkit-gradient(linear, 0 0, 0 50, from(#fff), to(#393939));
  margin-top: 300rpx;
  position: relative;
  line-height: 20px;
  padding: 20rpx;
  color: #fff;
}

.avatar-tit .info .toggle {
  color: #0084e0;
}

.avatar-tit .btn text {
  display: block;
  border: 1px solid #fff;
}

.avatar-list {
  padding-left: 26rpx;
}

.avatar-wrap {
  width: 160rpx;
  float: left;
  margin-right: 20rpx;
  margin-bottom: 20rpx;
}
