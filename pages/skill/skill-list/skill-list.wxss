@import "../../template/avatar-template.wxss";

.game {
  width: 100%;
  background-color: #fff;
  position: fixed;
  top: 0;
  left: 0;
}

.game-nav {
  height: 45px;
  line-height: 43px;
  white-space: nowrap;
}

.game-nav .on {
  font-weight: 700;
  color: #0084e0;
  border-bottom: 2px solid #0084e0;
}

.game-nav text {
  padding: 0 10px;
  display: inline-block;
}

.avatar-tit{
  margin-bottom: 30px;
}

.avatar-tit image {
  width: 100%;
  position: absolute;
  top: 0;
  left: 0;
}

.avatar-tit .name {
  width: 100%;
  position: absolute;
  top: 0;
  left: 0;
}

.avatar-tit .info {
  background-color: #393939;
  margin-top: 300rpx;
  position: relative;
  padding: 30rpx;
  color: #fff;
}

.avatar-list {
  padding-left: 26rpx;
}

.avatar-wrap {
  width: 160rpx;
  float: left;
  margin-right: 20rpx;
  margin-bottom: 20rpx;
}
