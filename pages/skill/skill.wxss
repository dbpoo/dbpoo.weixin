.sbg {
  height: 100vh;
  background-color: #000;
}

.skill-list {
  position: relative;
}

.skill-list image {
  width: 100%;
}

.skill-info {
  width: 100%;
  height: 200rpx;
  display: flex;
  align-items: center;
  position: absolute;
  top: 0;
  left: 0;
  background-color: rgba(0, 0, 0, 0.6);
}

.skill-info text {
  width: 100%;
  text-align: center;
  color: #eee;
  font-size: 40rpx;
  letter-spacing: 4rpx;
}

.sub-skill-block {
  font-size:30rpx;
  padding:10px 0;
  color: #fff;
  text-align: center;
  border-bottom: 1px solid #333;
}

.sub-skill-block:last-child{
  border-bottom: 0px;
}