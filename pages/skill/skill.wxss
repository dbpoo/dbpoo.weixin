.sbg {
  height: 100vh;
  background-color: #222222;
}

.skill-list {
  height: 200rpx;
  position: relative;
}

.skill-list image {
  width: 100%;
  height: 200rpx;
}

.skill-info {
  width: 100%;
  height: 200rpx;
  display: flex;
  justify-content: center;
  align-items: center;
  position: absolute;
  top: 0;
  left: 0;
  background-color: rgba(0, 0, 0, 0.6);
}

.skill-info view {
  width: 200px;
  padding: 20rpx 0;
  border-radius: 5px;
  text-align: center;
  color: #eee;
  font-size: 18px;
  letter-spacing: 4rpx;
  border: 1px solid #fff;
}

.skill-info view image {
  width: 30rpx;
  height: 23rpx;
}

.sub-skill-block {
  font-size: 18px;
  padding: 15px 0;
  color: #fff;
  text-align: center;
  border-bottom: 1px solid #333;
}

.sub-skill-block:last-child {
  border-bottom: 0px;
}
