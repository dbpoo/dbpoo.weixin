.sbg {
  height: 100vh;
  background-color: #000;
}

.skill-list {
  height: 300rpx;
  position: relative;
}

.skill-list image {
  width: 100%;
  height: 300rpx;
}

.skill-info {
  width: 100%;
  height: 300rpx;
  display: flex;
  align-items: center;
  position: absolute;
  top: 0;
  left: 0;
  background-color: rgba(0, 0, 0, 0.6);
}

.skill-info text {
  width: 100%;
  text-align: center;
  color: #eee;
  font-size: 40rpx;
  letter-spacing: 4rpx;
}
