.skill-wrapper {
  padding: 30rpx;
}

.skill-name {
  height: 50rpx;
  margin-bottom: 20px;
}

.skill-name text {
  font-size: 30px;
}

.skill-desc {
  color: #a9a9a9;
  letter-spacing: 2px;
  font-size: 16px;
  margin-bottom: 40rpx;
}

.skill-title {
  height: 50rpx;
  display: flex;
  padding:30rpx 0;
}

.skill-title text {
  font-size: 20px;
  border-left:4px solid #0095e0;
  padding-left:10px;
}

.skill{
  background-color:#fff;
  margin-bottom:30rpx;
}

.skill-tit{
  color:#fff;
  text-align: center;
  height:30px;
  line-height:30px;
  background-color:#0084e0;
}

.skill-info image{
  width: 100%;
}