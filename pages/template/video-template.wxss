.video {
  width: 340rpx;
  float: left;
  margin: 0 0 20px 20rpx;
}

.video-img {
  width: 340rpx;
  height: 200rpx;
  position: relative;
  overflow: hidden;
  margin-bottom: 10px;
}

.video-img image {
  width: 340rpx;
  height: 200rpx;
}

.video-title {
  width: 340rpx;
  height: 30rpx;
  line-height: 30rpx;
  overflow: hidden;
  font-size:14px;
}

.video-mask {
  width: 340rpx;
  height: 200rpx;
  background-color: rgba(0, 0, 0, 0.3);
  display: flex;
  align-items: center;
  justify-content: center;
  position: absolute;
  top: 0;
  left: 0;
}

.video-mask image {
  width: 100rpx;
  height: 100rpx;
}
