.video{
  width:330rpx;
}

.video-img{
  width:330rpx;
  height:200rpx;
  position: relative;
  border-radius: 5px;
  overflow:hidden;
  margin-bottom: 10rpx;
}

.video-img image{
  width:330rpx;
  height:200rpx;
}

.video-title{
  width:330rpx;
  height:30rpx;
  line-height:30rpx;
  overflow:hidden;
}

.video-mask{
  width:330rpx;
  height:200rpx;
  background-color:rgba(0,0,0,.3);
  display:flex;
  align-items: center;
  justify-content: center;
  position: absolute;
  top: 0;
  left: 0;
}

.video-mask image{
  width: 100rpx;
  height: 100rpx;
}