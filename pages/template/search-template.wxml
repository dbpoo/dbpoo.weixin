<template name="search">
  <view class="search">
    <view class="search-input">
      <image src="../../images/icon/icon_search.png" class="iconsearch"></image>
      <input type="text" placeholder="{{placeholder}}" 
  placeholder-class="placeholder" value="{{searchValue}}" bindinput="onBindInput"
  bindconfirm="onBindBlur" focus/>
      <view class="close" wx:if="{{isClose}}" catchtap="onClose"><image src="../../images/icon/xx.png"></image></view>
  </view>
    <text catchtap="onCancel" class="cancelBtn">取消</text>
  </view>
</template>
