.search {
  height: 50px;
  background-color: #0084e0;
  padding: 0 10px;
  display: flex;
  align-items: center;
}

.search .word{
  width: 100%;
  height: 30px;
  line-height: 30px;
  border-radius: 10px;
  background-color: #fff;
  padding: 0 10px;
  color:#808080;
}

.search input {
  width: 100%;
  height: 30px;
  line-height: 30px;
  border-radius: 10px;
  background-color: #fff;
  padding: 0 10px;
}

.search .cancelBtn {
  width: 70px;
  line-height: 50px;
  font-size: 16px;
  text-align: center;
  color: #fff;
}
